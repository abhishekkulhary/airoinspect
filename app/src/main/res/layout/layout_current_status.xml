<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="175dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/current_fly_status"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/fly"
        android:gravity="center"
        style="@style/TextviewStyleFly">

    </TextView>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="175dp"
        android:layout_weight="2"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            tools:ignore="NestedWeights">

            <TextView
                android:id="@+id/current_temperature"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/temperature"
                android:gravity="bottom|start"
                style="@style/TextviewStyle">

            </TextView>

            <TextView
                android:id="@+id/current_rain_status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/precipitation"
                android:gravity="bottom|start"
                style="@style/TextviewStyle">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            tools:ignore="NestedWeights">

            <TextView
                android:id="@+id/current_wind"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/wind"
                android:gravity="bottom|start"
                style="@style/TextviewStyle">

            </TextView>

            <TextView
                android:id="@+id/current_visibility"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/sun_or_visibility"
                android:gravity="bottom|start"
                style="@style/TextviewStyle">

            </TextView>

        </LinearLayout>

        <TextView
            android:id="@+id/current_time_place"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            style="@style/TextviewStyle">

        </TextView>


    </LinearLayout>
    </LinearLayout>
</LinearLayout>
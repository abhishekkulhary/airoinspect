<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Activate for Decision">
        <SwitchPreferenceCompat
            app:key="wind_switch"
            app:title="Wind" />

        <SwitchPreferenceCompat
            app:key="wind_gust_switch"
            app:title="Wind Gust" />
        <SwitchPreferenceCompat
            app:key="sunshine_switch"
            app:title="Sunshine" />
        <SwitchPreferenceCompat
            app:key="precipitation_switch"
            app:title="Precipation" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Threshold">

        <SeekBarPreference
            android:key="wind"
            android:title="Wind"
            android:summary="Max. Wind Speed allowed for Flight."
            android:max="25"
            android:min="0"
            android:defaultValue="10" />

        <SeekBarPreference
            android:key="wind_gust"
            android:title="Wind Gust"
            android:summary="Max. Wind Gust Speed allowed for Flight."
            android:max="25"
            android:min="0"
            android:defaultValue="15" />

        <SeekBarPreference
            android:key="precipitation"
            android:title="Precipitation"
            android:summary="Max. Precipitation allowed for Flight."
            android:max="1"
            android:min="0"
            android:defaultValue="0" />

    </PreferenceCategory>

</PreferenceScreen>
